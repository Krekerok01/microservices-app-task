<configuration>
    <appender name="KAFKA" class="io.confluent.kafka.log4jappender.KafkaLog4jAppender">
        <topic>logs</topic>
        <brokerList>kafka:9092</brokerList>
        <layout>
            <pattern>%d{HH:mm:ss.SSS} [%t] %logger{36} - %msg</pattern>
        </layout>
    </appender>

    <root level="INFO">
        <appender-ref ref="KAFKA"/>
    </root>

    <logger name="org.apache.kafka" level="INFO">
        <appender-ref ref="KAFKA"/>
    </logger>
    <logger name="org.slf4j.impl.Reload4jLoggerAdapter" level="INFO">
        <appender-ref ref="KAFKA"/>
    </logger>

</configuration>


